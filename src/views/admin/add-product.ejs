        <div class="main-content">
            <div class="header">
                <div>
                    <h1 class="page-title">Add Product</h1>
                    <p class="subtitle">Lorem ipsum dolor sit amet.</p>
                </div>
                <div class="header-buttons">
                    <button class="btn btn-secondary">Import</button>
                    <button class="btn btn-secondary">Export</button>
                    <button type="submit" form="productForm" class="btn btn-primary">Create new</button>
                </div>
            </div>
    
            <div class="card">
                <form id="productForm" enctype="multipart/form-data" class="form-container">
                    <div class="form-grid">
                        <div class="form-group">
                            <label>Product Name</label>
                            <input type="text" id="productName" class="form-control" required>
                           
                        </div>
    
                        <div class="form-group">
                            <label>Category</label>
                            <select class="form-control" id="category" required>
                               
                                <option value="" >All category</option>
                                <% allCategory.forEach(category=>  { %>
                                <option value="<%=category._id%>"><%=category.categoryName%></option>
                                <% }) %>
                                
                            </select>
                        </div>
    
                        <div class="form-group">
                            <label>Stock</label>
                            <input type="number" id="stock"  class="form-control" required>
                            
                        </div>
    
                        <div class="form-group">
                            <label>Quantity</label>
                            <input type="number"  id="quantity" class="form-control" required>
                          
                                <!-- <option value="active"></option>
                                <option value="archived">Archived</option> -->
                            </select>
                        </div>
                    </div>
    
                    <div class="form-group">
                        <label>Price Variants</label>
                        <div class="price-variant">
                            <div style="flex: 1;">
                                <label>Weight (kg)</label>
                                <input type="number"  id="Weight" class="form-control" required>
                               
                            </div>
                            <div style="flex: 1;">
                                <label>Price ($)</label>
                                <input type="number"id="price" class="form-control" required>
                                
                            </div>
                            <button type="button" id="remove-btn" class="btn btn-secondary">Remove</button>
                        </div>
                        <button type="button" id="add-pricebtn" class="btn btn-secondary">Add Price Variant</button>
                    </div>
    
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" id="description"></textarea>
                        
                    </div>
    
                    <div class="form-group">
                        <label>Product Images</label>
                        <div class="images-container">
                            <div class="image-upload-box">
                                <input type="file" id="img-1" accept="image/*">
                                <img id="img-1preview" src="" alt="">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M12 5v14M5 12h14"/>
                                </svg>
                                <p style="margin-top: 8px; color: #64748b; font-size: 13px;">Upload Image 1</p>
                            </div>
                            <div class="image-upload-box">
                                <input type="file" id="img-2" accept="image/*" >
                                <img  id="img-2preview" src="" alt="">
