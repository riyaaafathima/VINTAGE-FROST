
    <style>
        .address-section {
            background-color:#AD9170;
            color:  #AD9170;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .download-btn {
            background-color: white;
            color: #AD9170;
            border: none;
            padding: 0.375rem 1rem;
            border-radius: 4px;
        }
        
        .download-btn:hover {
            background-color: #f0f0f0;
            color: #8a745a;
        }
        
        .cancel-btn {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 0.375rem 1rem;
            border-radius: 4px;
        }
        
        .cancel-btn:hover {
            background-color: #bb2d3b;
        }
        
        .status-pending {
            color: #28a745;
            background-color: #e9ecef;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            display: inline-block;
            margin: 1rem 0;
        }
        
        .product-img {
            width: 200px;
            height: 200px;
            object-fit: cover;
        }
        
        .discounted-price {
            color: #AD9170;
            font-weight: bold;
        }
        
        .original-price {
            text-decoration: line-through;
            color: #6c757d;
            margin-left: 0.5rem;
        }
        
        .delivery-info {
            color: #6c757d;
            font-style: italic;
        }
        
        .main-container {
            max-width: 1000px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    
    <%- include('partials/header.ejs') %>

    <% if (userAddress && userAddress.addresses && userAddress.addresses.length > 0) { %>
        <% userAddress.addresses.forEach((address) => { %>
          <div class="address-section">
            <div class="main-container">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <h5 class="mb-2">Sent to:</h5>
                  <p class="mb-1"><%= address.phoneNumber %></p>
                  <p class="mb-1"><%= address.locality %>, <%= address.city %></p>
                  <p class="mb-0"><%= address.address %> / <%= address.pincode %></p>
                </div>
                <div>
                  <span class="me-2">Download Invoice:</span>
                  <button class="download-btn">Download</button>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p>No addresses available.</p>
      <% } %>
      

    <div class="main-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Here's what you ordered:</h2>
            <button class="cancel-btn">Cancel this order</button>
        </div>

        <div class="mb-3">
            <span>Order id: 1133</span>
            <p class="mb-1">Mon Feb 03 2025</p>
            <div class="status-pending">
                <span>✓</span> pending
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="d-flex justify-content-between border-bottom pb-2">
                    <div class="fw-bold">ITEM</div>
                    <div class="d-flex">
                        <div class="fw-bold me-5">QTY</div>
                        <div class="fw-bold" style="width: 100px;">COST</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <div class="d-flex align-items-start">
                    <img src="/api/placeholder/200/200" alt="Nike Air Jordan" class="product-img me-4">
                    <div class="flex-grow-1">
                        <h5>NIKE'S AIR JORDAN 1 HI FLYEASE</h5>
                        <p class="mb-1">SIZE: 7</p>
                        <p class="mb-1">boy's casual Shoe</p>
                        <p class="mb-1">
                            <span class="discounted-price">₹500</span>
                            <span class="original-price">₹2095</span>
                        </p>
                        <p class="mb-1" style="color: #ffc107;">pending</p>
                        <p class="delivery-info">"Estimated delivery by Mon, Feb 10. This may vary depending on your location."</p>
                    </div>
                    <div class="text-end" style="min-width: 150px;">
                        <div class="mb-2">1</div>
                        <div class="discounted-price">₹500</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

               <%- include('partials/footer.ejs') %>

</body>
</html>